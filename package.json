{
  "name": "nostr-run-club",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Nostr-powered running app for Android",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:android": "vite build && npx cap sync android",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,scss,json,md}\"",
    "preview": "vite preview",
    "android": "npx cap open android",
    "setup-icons": "node scripts/download-icon.js && node scripts/generate-icons.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:manual": "vite --config vite.config.test.js"
  },
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.20",
    "@capacitor/android": "^7.0.1",
    "@capacitor/core": "^7.0.1",
    "@getalby/bitcoin-connect": "^3.6.3",
    "@getalby/bitcoin-connect-react": "^3.6.3",
    "@getalby/sdk": "^3.8.2",
    "nostr-tools": "^2.1.4",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-h5-audio-player": "3.10.0-rc.1",
    "react-player": "^2.16.0",
    "react-router-dom": "^6.27.0",
    "tseep": "1.3.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.1",
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "jimp": "^1.6.0",
    "jsdom": "^26.0.0",
    "prettier": "3.5.1",
    "sharp": "^0.33.5",
    "terser": "^5.39.0",
    "vite": "^5.4.10",
    "vitest": "^3.0.9"
  },
  "capacitor": {
    "platforms": [
      "android"
    ]
  }
}
